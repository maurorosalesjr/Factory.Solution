@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1>Add a machine</h1>

<h4>Add a machine to this task: @Html.DisplayFor(model => model.EngineerName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)

    @Html.Label("Select machine")
    @Html.DropDownList("MachineId")

    <input type="submit" value="Save" class="accept" />
}

<p>@Html.ActionLink("Back to list", "Index", new { area = "" }, new { @class = "accept" })</p>