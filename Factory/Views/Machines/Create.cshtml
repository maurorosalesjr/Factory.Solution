@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Add a new Machine</h1>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.MachineName)
  @Html.TextBoxFor(model => model.MachineName)
  <input type="submit" value="Add new machine" class="accept" />
}
<p>@Html.ActionLink("Show all machines", "Index", new { area = "" }, new { @class = "accept" })</p>